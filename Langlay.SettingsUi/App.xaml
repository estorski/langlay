<Application x:Class="Product.SettingsUi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Product.SettingsUi"
             xmlns:common="clr-namespace:Product.Common;assembly=Langlay.Common"
             StartupUri="Ui/MainWindow.xaml">
    <Application.Resources>
        <common:EnumValueConverter x:Key="enumConverter" />
        <Style x:Key="separator" TargetType="Rectangle">
            <Setter Property="Stroke" Value="{x:Static SystemColors.ControlDarkBrush}" />
            <Setter Property="StrokeThickness" Value="0.5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Height" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
    </Application.Resources>
</Application>
