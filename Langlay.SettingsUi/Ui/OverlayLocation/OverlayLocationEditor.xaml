<UserControl x:Class="Product.SettingsUi.OverlayLocationEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Product.SettingsUi"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ShowGridLines="true">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="0" Grid.Row="0" x:Name="hTopLeft"      Location="TopLeft" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="1" Grid.Row="0" x:Name="hTopCenter"    Location="TopCenter" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="2" Grid.Row="0" x:Name="hTopRight"     Location="TopRight" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="0" Grid.Row="1" x:Name="hMiddleLeft"   Location="MiddleLeft" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="1" Grid.Row="1" x:Name="hMiddleCenter" Location="MiddleCenter" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="2" Grid.Row="1" x:Name="hMiddleRight"  Location="MiddleRight" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="0" Grid.Row="2" x:Name="hBottomLeft"   Location="BottomLeft" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="1" Grid.Row="2" x:Name="hBottomCenter" Location="BottomCenter" />
        <local:OverlayLocationHolder Foreground="Transparent" Grid.Column="2" Grid.Row="2" x:Name="hBottomRight"  Location="BottomRight" />
    </Grid>
</UserControl>
